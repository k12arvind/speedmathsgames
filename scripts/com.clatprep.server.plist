<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.clatprep.server</string>

    <!-- Use wrapper script for proper initialization -->
    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>/Users/arvindkumar/clat_preparation/scripts/start_server.sh</string>
    </array>

    <key>WorkingDirectory</key>
    <string>/Users/arvindkumar/clat_preparation</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/Users/arvindkumar/clat_preparation/venv_clat/bin:/usr/local/bin:/usr/bin:/bin</string>
    </dict>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <dict>
        <!-- Restart on crash or non-zero exit -->
        <key>SuccessfulExit</key>
        <false/>
        <key>Crashed</key>
        <true/>
    </dict>
    
    <!-- Wait 5 seconds before restarting after failure -->
    <key>ThrottleInterval</key>
    <integer>5</integer>

    <key>StandardOutPath</key>
    <string>/Users/arvindkumar/clat_preparation/logs/server.log</string>

    <key>StandardErrorPath</key>
    <string>/Users/arvindkumar/clat_preparation/logs/server_error.log</string>
</dict>
</plist>

